</nav>
</div> <!--end nav col-->
</div> <!--end row-->
  

<!--<div><%= link_to "print all blogs", 'contacts.pdf', target: :_blank, class:"btn"%></div>-->

    <!--<div class="wrapper clearfix">-->

    <div class= "row" style="padding-bottom:10%" >
  
 <div class= "col-md-6 text-center clearfix">
       
     
      <dl id="accordion">
        <dt>ALL BLOGS</dt>
    <dt> <label style=" color:green;background-color:white;"><%= notice %></label></dt>
      <% @blogs.each do |blog| %>
    <dt >
        </dt>
    <dd><label style="font-size: 25px;">
        <%= blog.title %> </label>
        
        <% if blog.image_url.present? %>
        <img>  <%= image_tag blog.image_url, :class => "style_image"  %><% end %>
        
   
        
         <% if blog.user == current_user %>
        <label style="float:right;font-size: 25px;"><%= link_to "Edit", edit_blog_path(blog.id)  ,data: { confirm: 'Are you sure?' }, class: 'label label-info label-small'%></label> 
        <label style="float:right;font-size: 25px;"><%= link_to link_to 'Delete', blog_path(blog.id), method: :delete ,data: { confirm: 'Are you sure?' }, class: 'label label-info label-small' %></label> 
          <% else %>
      <label style="float:right;font-size: 25px;"><%= link_to 'details', blog_path(blog.id), class: 'label label-info label-small'%></label> 
     
      <% end %>
       <h4> <%= blog.content %></h4>
        </dd>
<% end %>
    

  


   

</div>
<aside class="col-md-4  col-md-offset-1">


  
  <dl id="accordion">
    <dt>Add your Blog</dt>
    <dd>
    
    <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2 style="color:red;"><%= @blog.errors.count %>errors occurred.</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li style="color:red;"><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>
    
<%= form_with(model: @blog, local: true) do |form| %>
    
       <div class="form-group" >
        <%= form.label :title, "Tittle:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>
      
      
    
    <div class="form-group">
        <%= form.label :content, "Content:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= form.text_area :content, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :image, "Content:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= form.file_field :image, id: :blog_image, class: "form-control" %>
        </div>
        <%= form.hidden_field :image_cache %>
      </div>
     
  


  <center><%= form.submit "Submit", class: "btn btn-default btn-primary " %> </center>
  
    
<% end %>
  
  
  
  

    </dd>
  </dl>
  <p class="banner">
   
     <%= image_tag "chery tree.gif" %>
      
      
    
  </p>
  
</aside>

</div>
